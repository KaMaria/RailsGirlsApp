.devise-page
  %h1.page-header Forgot your password?
  .form-box
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email
        = f.email_field :email, placeholder: 'email@email.com', autofocus: true
      .sign-in-cta
        = f.submit "Send reset instructions", class: 'btn btn-lrg btn-pink-full'
    %ul.devise-options-list
      = render "devise/shared/links"
