=render "subnav"

.flex-index
  .flex-index-main
    %h1.page-header
      = overview_filter('People')

    = render partial: 'shared/alphabetical_list', locals: { alphabetical_list: @alphabetical_list}
    = render partial: 'shared/grouped_people', locals: { grouped_people: @grouped_people }

  %aside.flex-index-sidebar
    = render partial: 'shared/filter', locals: { path: people_path }


:javascript
  if (window.location.hash === '') {
    window.location.hash = "#{@alphabetical_list.first}";
  }
