<div class="container userprofile">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header clearfix">
        <h1 class="pull-left"><%= @coach.full_name %></h1>
        <div class="btn-group pull-right">
          <% if current_person.id == @coach.id %>
            <%= link_to edit_person_registration_path, html_options = {:class => 'btn btn-default'} do %>
              <%= fa_icon "pencil", text: "edit" %>
            <% end %>
          <% end %>
          <%= link_to coaches_path, html_options = {:class => 'btn btn-default'} do %>
            <%= fa_icon "arrow-left", text: "back" %>
          <% end %>
      </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h4>About</h4>
      <%= image_tag(@coach.picture_url(:person_profile)) if @coach.picture.present? %>
     <% if @coach.has_twitter? %>
        <p><%= link_to @coach.twitter_handle, @coach.twitter_profile_url, html_options = {:target => '_blank'} %></p>
      <% end %>
    </div>
    <div class="col-md-4">
      <h4>Coach at</h4>
      <% if @coach.has_group? %>
        <%= image_tag(@coach.group.picture_url(:person_profile)) if @coach.group.picture? %>
        <h2><%= link_to @coach.group.name, group_path(@coach.group) %></h2>
        <p><%= fa_icon "map-marker" %> <%= @coach.group.address %><br>
        <%= fa_icon "clock-o" %> <%= @coach.group.time %></p>
      <% else %>
        <p><%= @coach.first_name %> is currently not coaching a group.</p>
      <% end %>
    </div>
    <div class="col-md-4">
      <h4>Working on</h4>
      <p>to be implemented</p>
    </div>
  </div>
</div>
