<div class='container'>
  <h2 class='page-header'>These people want in!</h2>
  <div class='row'>
    <div class='col-md-8'>
      <table class='table table-striped'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th></th>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @pending.each do |pending| %>
            <tr>
              <td><%= pending.person.full_name %></td>
              <td><%= pending.name %></td>
              <td><%= link_to 'accept', membership_path(pending), method: :put %></td>
              <td><%= link_to 'deny', membership_path(pending), method: :delete, data: {confirm: "Are you sure you don't want this person in your group? This means you won't get cake..."} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
