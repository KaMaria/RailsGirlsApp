%li{class: "list-group-item"}
  .list-group-item-pic
    = render partial: 'shared/group_picture', locals: { group: group}
    %p
      - if group.full?
        %span.tag.tag-full
          Full
      - if group.inactive?
        %span.tag.tag-inactive
          Inactive
  .list-group-item-info
    %h3= link_to group.name, group
    - if group.allow_male_students?
      %p
        %span.tag.tag-mixed
          Mixed group
    %p
      %strong When:
      = group.time
    %p
      %strong Where:
      = group.address
    %p
      %strong Address:
      = group_location(group)
